#!/bin/bash

[ -n "$SSH_ORIGINAL_COMMAND" ] || exit 1

trigger_name=$(basename "$1")

set -- $SSH_ORIGINAL_COMMAND

shift
args="$*"
args=${args//[^a-zA-Z-]/}
args=${args,,}

# Ignore ftpsync stuff.
if [ "$args" = "syncall" -o "$args" = "sync:all" ]
then
    args=""
fi

echo "$(date): $trigger_name | $args" >> /srv/wanna-build/logs/signal.log

if [ ! -z "$args" ]
then
    # Pass arguments in the filename because we might get triggered for
    # multiple suites.  A simple append wouldn't be race-free on the
    # reader side.
    touch "/srv/wanna-build/signals/${trigger_name}.${args}"
else
    touch "/srv/wanna-build/signals/$trigger_name"
fi

exit 0

